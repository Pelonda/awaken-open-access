<Window x:Class="GEC.Client.LockWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Awaken – Secure Access"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Topmost="True"
        Background="{StaticResource AwakenBackgroundBrush}"
        KeyDown="Window_KeyDown"
        Focusable="True">

	<Grid>

		<!-- CENTER GLASS CARD -->
		<Border Style="{StaticResource AwakenGlassCard}"
                Width="480"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

			<StackPanel>

				<!-- LOGO -->
				<Image Height="64"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,14"
                       Source="pack://application:,,,/Assets/awaken-logo.png"/>

				<!-- TITLE -->
				<TextBlock Text="Awaken"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource AwakenTextBrush}"/>

				<TextBlock Text="Secure Access System"
                           FontSize="13"
                           Margin="0,2,0,14"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource AwakenTextMutedBrush}"/>

				<!-- COMPUTER ID -->
				<TextBlock x:Name="ComputerText"
                           FontSize="14"
                           Margin="0,0,0,16"
                           HorizontalAlignment="Center"
                           Foreground="{StaticResource AwakenTextMutedBrush}"/>

				<!-- PIN LABEL -->
				<TextBlock Text="Enter your PIN"
                           Margin="0,0,0,6"
                           Foreground="{StaticResource AwakenTextBrush}"/>

				<!-- PIN BOX -->
				<PasswordBox x:Name="PinBox"
                             FontSize="22"
                             Height="36"
                             Padding="10,6"
                             Background="#14FFFFFF"
                             Foreground="{StaticResource AwakenTextBrush}"
                             BorderBrush="{StaticResource AwakenBorderBrush}"
                             BorderThickness="1"
                             Margin="0,0,0,10"/>

				<!-- LOGIN BUTTON -->
				<Button Content="Login"
                        Height="38"
                        Margin="0,0,0,10"
                        Click="Login_Click"
                        Style="{StaticResource AwakenPrimaryButton}"/>

				<!-- STATUS MESSAGE -->
				<TextBlock x:Name="StatusText"
                           Margin="0,8,0,0"
                           Foreground="{StaticResource AwakenDangerBrush}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
			</StackPanel>

		</Border>

	</Grid>
</Window>
