<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ===== Colors ===== -->
	<Color x:Key="AwakenBg">#FF0B1220</Color>
	<Color x:Key="AwakenCard">#CC111827</Color>
	<Color x:Key="AwakenCard2">#AA0F172A</Color>

	<Color x:Key="AwakenText">#FFF3F4F6</Color>
	<Color x:Key="AwakenTextDim">#FFC7D2FE</Color>

	<Color x:Key="AwakenLine">#33FFFFFF</Color>
	<Color x:Key="AwakenHeader">#FF1F2A44</Color>

	<Color x:Key="AwakenRow1">#FF141C2D</Color>
	<Color x:Key="AwakenRow2">#FF101726</Color>

	<Color x:Key="AwakenAccent">#FF3B82F6</Color>
	<Color x:Key="AwakenAccent2">#FF7C3AED</Color>

	<!-- ===== Brushes ===== -->
	<SolidColorBrush x:Key="AwakenBgBrush" Color="{StaticResource AwakenBg}"/>
	<SolidColorBrush x:Key="AwakenCardBrush" Color="{StaticResource AwakenCard}"/>
	<SolidColorBrush x:Key="AwakenTextBrush" Color="{StaticResource AwakenText}"/>
	<SolidColorBrush x:Key="AwakenTextDimBrush" Color="{StaticResource AwakenTextDim}"/>
	<SolidColorBrush x:Key="AwakenLineBrush" Color="{StaticResource AwakenLine}"/>
	<SolidColorBrush x:Key="AwakenHeaderBrush" Color="{StaticResource AwakenHeader}"/>
	<SolidColorBrush x:Key="AwakenRow1Brush" Color="{StaticResource AwakenRow1}"/>
	<SolidColorBrush x:Key="AwakenRow2Brush" Color="{StaticResource AwakenRow2}"/>

	<!-- Compatibility keys used across your XAML -->
	<SolidColorBrush x:Key="AwakenBackgroundBrush" Color="{StaticResource AwakenBg}"/>
	<SolidColorBrush x:Key="AwakenBorderBrush" Color="{StaticResource AwakenLine}"/>
	<SolidColorBrush x:Key="AwakenTextMutedBrush" Color="{StaticResource AwakenTextDim}"/>

	<!-- Status brushes -->
	<SolidColorBrush x:Key="AwakenOkBrush" Color="#FF22C55E"/>
	<SolidColorBrush x:Key="AwakenWarnBrush" Color="#FFF59E0B"/>
	<SolidColorBrush x:Key="AwakenDangerBrush" Color="#FFEF4444"/>

	<!-- Accent brush -->
	<SolidColorBrush x:Key="AwakenAccentBrush" Color="{StaticResource AwakenAccent}"/>

	<!-- ===== Glass Card ===== -->
	<Style x:Key="AwakenGlassCard" TargetType="Border">
		<Setter Property="CornerRadius" Value="22"/>
		<Setter Property="Padding" Value="18"/>
		<Setter Property="Background" Value="{StaticResource AwakenCardBrush}"/>
		<Setter Property="BorderBrush" Value="{StaticResource AwakenLineBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>
		<Setter Property="SnapsToDevicePixels" Value="True"/>
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect BlurRadius="30" ShadowDepth="12" Opacity="0.30"/>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- ===== Primary Button (safe) ===== -->
	<Style x:Key="AwakenPrimaryButton" TargetType="Button">
		<Setter Property="Foreground" Value="White"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="FontSize" Value="14"/>
		<Setter Property="Padding" Value="18,10"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="Cursor" Value="Hand"/>
		<Setter Property="MinHeight" Value="38"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>

		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="Button">
					<Border x:Name="B"
                            CornerRadius="18"
                            SnapsToDevicePixels="True"
                            Height="{TemplateBinding Height}"
                            MinHeight="{TemplateBinding MinHeight}">
						<Border.Background>
							<LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
								<GradientStop Color="{StaticResource AwakenAccent}" Offset="0"/>
								<GradientStop Color="{StaticResource AwakenAccent2}" Offset="1"/>
							</LinearGradientBrush>
						</Border.Background>

						<Border.Effect>
							<DropShadowEffect BlurRadius="18" ShadowDepth="8" Opacity="0.35"/>
						</Border.Effect>

						<ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          Margin="{TemplateBinding Padding}"/>
					</Border>

					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="True">
							<Setter TargetName="B" Property="Opacity" Value="0.92"/>
						</Trigger>

						<Trigger Property="IsPressed" Value="True">
							<Setter TargetName="B" Property="Opacity" Value="0.82"/>
							<Setter TargetName="B" Property="RenderTransform">
								<Setter.Value>
									<TranslateTransform Y="1"/>
								</Setter.Value>
							</Setter>
						</Trigger>

						<Trigger Property="IsEnabled" Value="False">
							<Setter TargetName="B" Property="Opacity" Value="0.45"/>
						</Trigger>
					</ControlTemplate.Triggers>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- =======================
         DATAGRID
         ======================= -->

	<Style x:Key="AwakenDataGridColumnHeader" TargetType="DataGridColumnHeader">
		<Setter Property="Background" Value="{StaticResource AwakenHeaderBrush}"/>
		<Setter Property="Foreground" Value="{StaticResource AwakenTextBrush}"/>
		<Setter Property="FontWeight" Value="SemiBold"/>
		<Setter Property="Padding" Value="10,8"/>
		<Setter Property="BorderBrush" Value="{StaticResource AwakenLineBrush}"/>
		<Setter Property="BorderThickness" Value="0,0,0,1"/>
		<Setter Property="HorizontalContentAlignment" Value="Left"/>
	</Style>

	<Style x:Key="AwakenDataGridCell" TargetType="DataGridCell">
		<Setter Property="Padding" Value="10,6"/>
		<Setter Property="Foreground" Value="{StaticResource AwakenTextBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Style.Triggers>
			<Trigger Property="IsSelected" Value="True">
				<Setter Property="Background" Value="#403B82F6"/>
				<Setter Property="Foreground" Value="White"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="AwakenDataGridRow" TargetType="DataGridRow">
		<Setter Property="MinHeight" Value="34"/>
		<Setter Property="SnapsToDevicePixels" Value="True"/>
		<Style.Triggers>
			<Trigger Property="IsMouseOver" Value="True">
				<Setter Property="Background" Value="#221F6FEB"/>
			</Trigger>
			<Trigger Property="IsSelected" Value="True">
				<Setter Property="Background" Value="#453B82F6"/>
			</Trigger>
		</Style.Triggers>
	</Style>

	<Style x:Key="AwakenDataGrid" TargetType="DataGrid">
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{StaticResource AwakenTextBrush}"/>
		<Setter Property="BorderThickness" Value="0"/>
		<Setter Property="GridLinesVisibility" Value="None"/>
		<Setter Property="RowHeaderWidth" Value="0"/>
		<Setter Property="HeadersVisibility" Value="Column"/>
		<Setter Property="AlternationCount" Value="2"/>
		<Setter Property="RowBackground" Value="{StaticResource AwakenRow1Brush}"/>
		<Setter Property="AlternatingRowBackground" Value="{StaticResource AwakenRow2Brush}"/>

		<Setter Property="ColumnHeaderStyle" Value="{StaticResource AwakenDataGridColumnHeader}"/>
		<Setter Property="CellStyle" Value="{StaticResource AwakenDataGridCell}"/>
		<Setter Property="RowStyle" Value="{StaticResource AwakenDataGridRow}"/>

		<Setter Property="SelectionMode" Value="Single"/>
		<Setter Property="SelectionUnit" Value="FullRow"/>
	</Style>

	<!-- =======================
         COMBOBOX (FIXED: selected value visible)
         ======================= -->
	<Style x:Key="AwakenComboBox" TargetType="ComboBox">
		<Setter Property="Height" Value="34"/>
		<Setter Property="Padding" Value="10,4"/>

		<!-- This is the key fix for the “selected value looks blank” problem -->
		<Setter Property="Foreground" Value="{StaticResource AwakenTextBrush}"/>
		<Setter Property="TextElement.Foreground" Value="{StaticResource AwakenTextBrush}"/>

		<!-- Dark closed background so white text is readable -->
		<Setter Property="Background" Value="#FF0F172A"/>
		<Setter Property="BorderBrush" Value="{StaticResource AwakenBorderBrush}"/>
		<Setter Property="BorderThickness" Value="1"/>

		<Setter Property="HorizontalContentAlignment" Value="Left"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>

		<!-- Dropdown items -->
		<Setter Property="ItemContainerStyle">
			<Setter.Value>
				<Style TargetType="ComboBoxItem">
					<Setter Property="Foreground" Value="{StaticResource AwakenTextBrush}"/>
					<Setter Property="Background" Value="#FF0F172A"/>
					<Setter Property="Padding" Value="10,6"/>
					<Setter Property="HorizontalContentAlignment" Value="Left"/>
					<Style.Triggers>
						<Trigger Property="IsHighlighted" Value="True">
							<Setter Property="Background" Value="#FF1F2A44"/>
						</Trigger>
						<Trigger Property="IsSelected" Value="True">
							<Setter Property="Background" Value="#FF2563EB"/>
							<Setter Property="Foreground" Value="White"/>
						</Trigger>
					</Style.Triggers>
				</Style>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
