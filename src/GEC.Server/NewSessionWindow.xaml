<Window x:Class="GEC.Server.NewSessionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Session - Awaken"
        Height="394" Width="523"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource AwakenBgBrush}"
        ResizeMode="NoResize">

	<Grid Margin="18">
		<Border Style="{StaticResource AwakenGlassCard}">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- TITLE -->
				<TextBlock x:Name="ComputerNameText"
                           Grid.Row="0"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource AwakenTextBrush}"/>

				<!-- DURATION -->
				<StackPanel Grid.Row="1"
                            Orientation="Vertical"
                            Margin="0,10,0,0">
					<TextBlock Text="Duration (minutes)"
                               Foreground="{StaticResource AwakenTextDimBrush}"/>

					<ComboBox x:Name="DurationCombo"
                              
                              SelectedIndex="1"
                              Style="{StaticResource AwakenComboBox}"                              
                              Height="30"
                              Padding="8,3">
                                                           
						<ComboBoxItem Content="30"/>
						<ComboBoxItem Content="60"/>
						<ComboBoxItem Content="120"/>
						<ComboBoxItem Content="180"/>
						<ComboBoxItem Content="240"/>
					</ComboBox>
				</StackPanel>

				<!-- GENERATED PIN -->
				<StackPanel Grid.Row="2"
                            Orientation="Vertical"
                            Margin="0,12,0,0">

					<TextBlock Text="Generated PIN"
                               Foreground="{StaticResource AwakenTextDimBrush}"/>

					<Border Background="#22111827"
                            BorderBrush="#33FFFFFF"
                            BorderThickness="1"
                            CornerRadius="12"
                            Margin="0,6,0,6"
                            Padding="8">
						<TextBox x:Name="PinText"
                                 FontSize="26"
                                 FontWeight="Bold"
                                 HorizontalContentAlignment="Center"
                                 BorderThickness="0"
                                 Foreground="{StaticResource AwakenTextBrush}"
                                 Background="Transparent"/>
					</Border>

					<TextBlock Text="You can keep this PIN or type your own."
                               FontSize="11"
                               Foreground="{StaticResource AwakenTextDimBrush}"
                               Margin="0,0,0,6"/>

					<Button Content="Regenerate PIN"
                            Width="170"
                            HorizontalAlignment="Right"
                            Style="{StaticResource AwakenPrimaryButton}"
                            Click="RegeneratePin_Click"/>
				</StackPanel>

				<!-- BUTTONS -->
				<StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,12,0,0">

					<Button Content="Cancel"
                            Width="90"
                            Margin="6,0"
                            IsCancel="True"
                            Style="{StaticResource AwakenPrimaryButton}"/>

					<Button Content="OK"
                            Width="90"
                            Margin="6,0"
                            IsDefault="True"
                            Style="{StaticResource AwakenPrimaryButton}"
                            Click="Ok_Click"/>
				</StackPanel>

			</Grid>
		</Border>
	</Grid>
</Window>
